{% if config.yii2webapp.ssl %}

server {
    listen        {{ config.yii2webapp.ip }}:80;
    server_name   {{ config.yii2webapp.domain }};
    error_log     {{ config.yii2webapp.logdir }}/$host-error.log info;
    access_log    off;
    rewrite       (.*) https://$host$1;
}

server {
    listen        {{ config.yii2webapp.ip }}:443;
    server_name   {{ config.yii2webapp.domain }};

    ssl                   on;
    ssl_session_cache     shared:SSL:10m;
    ssl_session_timeout   10m;
    ssl_certificate       {{ config.yii2webapp.sslPath }}.crt;
    ssl_certificate_key   {{ config.yii2webapp.sslPath }}.key;
    ssl_protocols         SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers           "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://127.0.0.1:80;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
}
{% endif %}

server {
    listen {{ config.yii2webapp.ssl ? '127.0.0.1' : config.yii2webapp.ip }}:80;

    server_name     {{ config.yii2webapp.domain }};
    root            {{ config.yii2webapp.webdir }};

    charset utf-8;
    client_max_body_size 128M;

    server_tokens   off;

    error_log       {{ config.yii2webapp.logdir }}/{{ config.yii2webapp.domain }}-error.log info;
    access_log      {{ config.yii2webapp.logdir }}/{{ config.yii2webapp.domain }}-access.log combined;

    fastcgi_index   index.php;

    location / {
        # Redirect everything that isn't a real file to index.php
        try_files $uri /index.php?$args;
    }

    location ~ \.php$ {
        include          fastcgi_params;
        fastcgi_pass     {{ config.yii2webapp.fpmSocket }};
        fastcgi_param    SCRIPT_FILENAME $document_root/$fastcgi_script_name;
        fastcgi_param    REMOTE_ADDR $http_x_real_ip;
        fastcgi_param    HTTP_REFERER $http_referer;
        fastcgi_param    PHP_VALUE "
            error_log = {{ config.yii2webapp.logdir }}/{{ config.yii2webapp.domain }}-php.log
            error_reporting = E_ALL & ~E_NOTICE & ~E_STRICT
        ";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        try_files $uri =404;
    }

    location ~ /\.(ht|svn|git) {
        deny all;
    }

    location @not_found {
        internal;
        return 404;
    }
}
